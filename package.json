{
  "name": "anduin",
  "version": "0.1.0",
  "description": "Markdown 文本编辑器",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "electron-builder --win --publish never",
    "dist:mac": "electron-builder --mac --publish never",
    "dist:linux": "electron-builder --linux --publish never",
    "dist:all": "electron-builder --win --mac --linux --publish never",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "author": "Robert.HU",
  "license": "Apache License",
  "build": {
    "appId": "com.anduin.app",
    "productName": "Anduin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/**/*",
      "src/preferences/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/icon.jpg",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/mac/entitlements.mac.plist",
      "entitlementsInherit": "resources/mac/entitlements.mac.plist",
      "generateUpdatesFilesForAllChannels": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.jpg",
      "category": "Office",
      "desktop": {
        "entry": {
          "Name": "Anduin",
          "Comment": "Markdown 文本编辑器",
          "Categories": "Office;TextEditor;",
          "MimeType": "text/markdown;"
        }
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Anduin",
      "include": "resources/windows/installer.nsh",
      "installerIcon": "resources/icons/icon.jpg",
      "uninstallerIcon": "resources/icons/icon.jpg",
      "installerHeaderIcon": "resources/icons/icon.jpg"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "resources/icons/icon.jpg",
      "background": null,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "devDependencies": {
    "electron": "37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-plugin-node": "^11.1.0"
  },
  "dependencies": {
    "mammoth": "^1.11.0",
    "marked": "^12.0.0",
    "turndown": "^7.2.2"
  }
}
